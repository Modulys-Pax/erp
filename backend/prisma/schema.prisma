  notes                 String?
  externalKey           String?               // Chave NF-e (futuro)
  issuedAt              DateTime?             // Data/hora emissão NF-e (futuro)
  xmlPath               String?               // Caminho do XML (futuro)
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  createdBy             String?
  deletedAt             DateTime?

  @@map("fiscal_documents")
}

